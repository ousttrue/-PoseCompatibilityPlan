    "version": "0.2.0",
    "configurations": [
        {
            "name": "HumanPose",
            "type": "python",
            "request": "launch",
            "module": "humanpose",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
            },
        },
        {
            "name": "humanbonestructure",
            "type": "python",
            "request": "launch",
            "module": "humanbonestructure",
            "args": [
                "--ini",
                "humanbonestructure.dat",
                "--asset",
                "${env:MMD_DATA}",
                "--nerdfont",
                "${env:USERPROFILE}/AppData/Local/Microsoft/Windows/Fonts/HackGenNerdConsole-Regular.ttf",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "poseman",
            "type": "python",
            "request": "launch",
            "module": "humanbonestructure.poseman",
            "args": [
                "--ini",
                "poseman.dat",
                "--font",
                "${env:HOME}/.fonts/HackGenNerdConsole-Regular.ttf",
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
            },
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}